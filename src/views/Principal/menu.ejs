<%- include("../Comunes/header.ejs") -%>
    <div class="container center">
        <h5>Productos disponibles</h5>
    </div>

    <div class="row">
        <% for(var i=0;i<productos.length;i++){%>
            <div class="col s6 m2">
                <div class="card">
                    <div class="card-image ">
                        <img height="210px"
                            src="https://www.caiv.org/wp-content/plugins/smg-theme-tools/public/images/not-available-es.png">
                        <a class="btn-floating halfway-fab waves-effect waves-light orange accent-4"><i
                                class="material-icons">add</i></a>
                    </div>
                    <div class="card-content">
                        <span class="card-title  activator grey-text text-darken-4">
                            <%=productos[i].nombre_pro%>
                                <h6>Precio : $ <%=productos[i].precio_pro%>
                                </h6><i class="material-icons right">more_vert</i>
                        </span>
                        <p>Descripción</p>

                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4"><%=productos[i].nombre_pro%><i
                                class="material-icons right">close</i></span>
                        <p>Descripción <%=productos[i].descripcion_pro%></p>
                    </div>
                </div>
            </div>
        <% }%>
    </div>
    <%- include("../Comunes/footer.ejs") -%>